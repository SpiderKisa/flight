{% extends 'base.html.twig' %}

{% block body %}
    {% if schedules is empty %}

        <div class="container mt-5">
            <div class="row">
                <div class="col">
                    <h5>Nothing was found</h5>
                </div>
            </div>
        </div>

    {% else %}

        <div class="container mt-5">
            <div class="row">
                <div class="col">
                    <h5>Available flights from {{ departureCity.name }} to {{ destinationCity.name }}</h5>
                </div>
            </div>
            <div class="row">

                <div class="col">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Flight</th>
                            <th scope="col">Departure airport</th>
                            <th scope="col">Departure date</th>
                            <th scope="col">Destination airport</th>
                            <th scope="col">Arrival date</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for schedule in schedules %}
                            <tr>
                                <td>{{ schedule.flight.code }}</td>
                                <td>{{ schedule.way.departure.name }}</td>
                                <td>{{ schedule.departureDate |date('d-m-Y H:i') }}</td>
                                <td>{{ schedule.way.destination.name }}</td>
                                <td>{{ schedule.arrivalDate |date('d-m-Y H:i') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}